        </symbol>
        <symbol id="undo" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 3a5 5 0 1 1-4.546 2.914.5.5 0 0 0-.908-.417A6 6 0 1 0 8 2z" />
            <path d="M8 4.466V.534a.25.25 0 0 0-.41-.192L5.23 2.308a.25.25 0 0 0 0 .384l2.36 1.966A.25.25 0 0 0 8 4.466" />
        </symbol>
        <symbol id="save" viewBox="0 0 16 16">
            <path d="M11 2H9v3h2z" />
            <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z" />
        </symbol>
    </svg>

    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <span class="fs-4">@ViewData["Title"] - AppMusicMVC</span>
            </a>

            <ul class="nav nav-pills">
                <li class="nav-item"><a href="~/Home/Index" class="nav-link" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="~/Home/Routes" class="nav-link" aria-current="page">Routes</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Model Studies
                    </a>
                    <ul class="dropdown-menu">
                        <li class="nav-item"><a href="~/Model/ModelList" class="nav-link">ModelList</a></li>
                        <li class="nav-item"><a href="~/Model/Search" class="nav-link">Search</a></li>
                        <li class="nav-item"><a asp-controller="Model" asp-action="LatinList" class="nav-link">LatinList</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Form Input Studies
                    </a>
                    <ul class="dropdown-menu">
                        <li class="nav-item"><a href="~/Form/InputModelSimple" class="nav-link">InputModelSimple</a></li>
                        <li class="nav-item"><a asp-controller="Form" asp-action="InputModelSimple" class="nav-link">InputModelSimple</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Form Validation Studies
                    </a>
                    <ul class="dropdown-menu">
                        <li class="nav-item"><a href="~/FormValidation/FullValidationListAdd" class="nav-link">FullValidationListAdd</a></li>
                    </ul>
                </li>
            </ul>
        </header>
    </div>

    <main>
        @RenderBody()
    </main>

    <!--Part of page Frame -->
    <!--Modals used by the individual pages -->
    <!--
      https://getbootstrap.com/docs/4.0/components/modal/
    -->
    <!-- Modal that closes also if you click outside the modal or hit escape -->
    <div class="modal fade" id="softModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="softModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Hello from modal
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal that DO NOT close if you click outside the modal or hot escape -->
    <div class="modal fade" id="hardModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="hardModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="hardModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Hello from modal
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Ok</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Danger -->
    <div class="modal fade" id="dangerModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Hello from modal
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary btn-danger" data-bs-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Part of page Frame -->
    <!-- Footer with copyright notice -->
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="~/index.html" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                    <span class="mb-3 mb-md-0 text-body-secondary">&copy; 2024 Seido AB</span>
                </a>
            </div>
            <div class="col-md-6 d-flex align-items-center ms-auto">
                <span class="mb-3 mb-md-0 text-body-secondary">Environment: @dbConnections.SetupInfo.AppEnvironment&nbsp&nbsp</span>
                <span class="mb-3 mb-md-0 text-body-secondary">@dbConnections.SetupInfo.SecretSource</span>
            </div>
            <div class="col-md-6 d-flex align-items-center ms-auto">
                <span class="mb-3 mb-md-0 text-body-secondary">Datasource: @dbConnections.SetupInfo.DataConnectionTag &nbsp @dbConnections.SetupInfo.DataConnectionServer</span>
            </div>

        </footer>
    </div>

    <!-- Part of page Frame -->
    <!-- Bootstrap Javascript -->
    <script src="~/script/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- .NET unobstrusive validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>


    <!-- SeidoAB script helpers -->
    <script src="~/script/seido/modals.js" asp-append-verison="true"></script>
    <script src="~/script/seido/select-list-items.js" asp-append-verison="true"></script>

    @await RenderSectionAsync("script", false)
</body>
</html>